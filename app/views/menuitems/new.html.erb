<% provide(:title, 'Add Menu Item') %>
<h1>Add a Menu Item</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@menuitem) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

     <br>
 
    <%= f.label :restaurant_id, 'Restaurant:' %><br>
   
    <%= collection_select(:menuitem, :restaurant_id, Restaurant.all, :id,  
    :name, {:prompt => false })  %>


  <%= f.label :mtype, 'Menu Item Type:' %><br>
   <%=f.select(:mtype, options_for_select([['Food', 'food'],['Drink','drink']]))%>

     <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>


    <%= f.label :category, 'Menu Item Category:' %><br>
    <%=f.select(:category, options_for_select([['Starter', 'starter'],['Main','main'],['Desert','desert']]))%>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>

      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
      

<br>
      <%= f.submit "Create Menu Item", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
