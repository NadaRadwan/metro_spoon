<% provide(:title, 'Add Restaurant') %>
<h1>Add a Restaurant</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@restaurant) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :rtype, 'Restaurant Type:' %>
      <%=f.select(:rtype, options_for_select([['Mexican', 'mexican'],['Breakfast','breakfast'],['Italian','italian'],['American', 'american'],['Pub','pub'],['Southern','southern'],['French','french'],['Chinese','chinese']]))%>
      
      <%= f.label :url, 'Website' %>
      <%= f.text_field :url, class: 'form-control' %>

<br>
      <%= f.submit "Create Restaurant", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>