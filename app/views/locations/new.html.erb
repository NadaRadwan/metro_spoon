<% provide(:title, 'Add Location') %>
<h1>Add a Location</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@location) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

     <br>
      <div class="form-control">
    <%= f.label :restaurant_id %><br>
    <br>
    <%= collection_select(:location, :restaurant_id, Restaurant.all, :id,  
    :name, {:prompt => false })  %>
  </div>

<br>
<br>

      <%= f.label :fopen, 'Year Location Opened' %>
      <%=f.select(:fopen, 1900..Time.now.year)%>

      <%= f.label :manager %>
      <%= f.text_field :manager, class: 'form-control' %>

      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form-control' %>

      <%= f.label :postal %>
      <%= f.text_field :postal, class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :mon %>
      <%= f.text_field :mon, class: 'form-control' %>

      <%= f.label :tue %>
      <%= f.text_field :tue, class: 'form-control' %>

      <%= f.label :wed %>
      <%= f.text_field :wed, class: 'form-control' %>

      <%= f.label :thurs %>
      <%= f.text_field :thurs, class: 'form-control' %>
      
      <%= f.label :fri %>
      <%= f.text_field :fri, class: 'form-control' %>

      <%= f.label :sat %>
      <%= f.text_field :sat, class: 'form-control' %>

      <%= f.label :sun %>
      <%= f.text_field :sun, class: 'form-control' %>

<br>
      <%= f.submit "Create Restaurant", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>